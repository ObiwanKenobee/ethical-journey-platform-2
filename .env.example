# Environment
NODE_ENV=development
PORT=3001

# Database Configuration
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# Payment Providers
# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Paystack
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key
PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key
PAYSTACK_WEBHOOK_SECRET=your_paystack_webhook_secret
PAYSTACK_CALLBACK_URL=http://localhost:3001/api/payments/webhooks/paystack/callback

# Flutterwave
FLUTTERWAVE_SECRET_KEY=FLWSECK_TEST-your_flutterwave_secret_key
FLUTTERWAVE_PUBLIC_KEY=FLWPUBK_TEST-your_flutterwave_public_key
FLUTTERWAVE_WEBHOOK_SECRET=your_flutterwave_webhook_secret
FLUTTERWAVE_REDIRECT_URL=http://localhost:3001/api/payments/webhooks/flutterwave/callback
FLUTTERWAVE_TRANSFER_CALLBACK_URL=http://localhost:3001/api/payments/webhooks/flutterwave/transfer

# Redis Configuration (optional, for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password
FROM_EMAIL=noreply@atlas.com
FROM_NAME=Atlas Platform

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,application/pdf,text/csv

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=./logs

# Security Configuration
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SESSION_SECRET=your_session_secret

# External Services
COMPANY_LOGO_URL=https://your-company.com/logo.png
SUPPORT_EMAIL=support@atlas.com
SUPPORT_PHONE=+1-555-0123

# Analytics and Monitoring
ANALYTICS_API_KEY=your_analytics_api_key
MONITORING_API_KEY=your_monitoring_api_key
SENTRY_DSN=your_sentry_dsn

# Webhook URLs
WEBHOOK_BASE_URL=http://localhost:3001/api

# AI/ML Services (if applicable)
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key

# Blockchain Configuration (if applicable)
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your_project_id
POLYGON_RPC_URL=https://polygon-mainnet.infura.io/v3/your_project_id
PRIVATE_KEY=your_blockchain_private_key

# Feature Flags
ENABLE_PAYMENTS=true
ENABLE_BLOCKCHAIN=false
ENABLE_AI_FEATURES=true
ENABLE_COMPLIANCE_ENGINE=true
ENABLE_REAL_TIME=true

# Database Migration
ENABLE_AUTO_MIGRATIONS=false
MIGRATION_DIR=./migrations

# Cache Configuration
CACHE_TTL=3600
CACHE_PREFIX=atlas:

# Rate Limiting
API_RATE_LIMIT=1000
PAYMENT_RATE_LIMIT=100
AUTH_RATE_LIMIT=10

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=atlas-backups
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Compliance
COMPLIANCE_FRAMEWORKS=SOC2,ISO27001,GDPR,HIPAA
AUDIT_LOG_RETENTION_DAYS=2555
DATA_RETENTION_DAYS=2555

# Development
DEBUG=atlas:*
VERBOSE_LOGGING=false

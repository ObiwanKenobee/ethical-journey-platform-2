# Production Environment Variables for Atlas Platform

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/atlas_prod
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# API Configuration
API_BASE_URL=https://api.atlas.com
JWT_SECRET=your-production-jwt-secret-256-bit-key
ENCRYPTION_KEY=your-production-encryption-key

# Email Service Configuration
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=apikey
SMTP_PASS=your-sendgrid-api-key

# External API Keys
OPENAI_API_KEY=your-openai-api-key
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Payment Processing
STRIPE_PUBLIC_KEY=pk_live_your-stripe-public-key
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
PAYSTACK_PUBLIC_KEY=pk_live_your-paystack-public-key
PAYSTACK_SECRET_KEY=sk_live_your-paystack-secret-key

# Analytics & Monitoring
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
SENTRY_DSN=https://your-sentry-dsn
VERCEL_ENV=production

# CDN & Storage
AWS_S3_BUCKET=atlas-production-assets
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Rate Limiting
REDIS_URL=redis://localhost:6379

# Security
CORS_ORIGIN=https://atlas.com,https://www.atlas.com
SESSION_SECRET=your-session-secret-key

# Application Settings
NODE_ENV=production
PORT=3000
LOG_LEVEL=info
